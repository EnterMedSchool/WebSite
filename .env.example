# Auth (NextAuth.js)
NEXTAUTH_SECRET=replace-with-a-random-secret
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (recommended)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Optional GitHub OAuth (unused by default)
GITHUB_ID=
GITHUB_SECRET=

# Vercel Postgres
# When you add Vercel Postgres in the Vercel dashboard, these are added automatically.
POSTGRES_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_HOST=
POSTGRES_DATABASE=

# Admin features removed â€” no admin-specific env required

# Seeding/maintenance secret for protected endpoints
SEED_SECRET=replace-with-a-random-seed-key

# Floating widgets (disabled by default)
# Client: show widgets when 1/true
NEXT_PUBLIC_WIDGETS_ENABLED=0
# Server: allow APIs when 1/true
FEATURE_WIDGETS_ENABLED=0

# Email dev mode (no SMTP): when 1/true the verify and reset
# endpoints return the magic link URL in JSON for testing.
EMAIL_DEV_MODE=1

# Cloudflare Turnstile (optional but recommended for anti-spam)
# If set, signup and password reset will require CAPTCHA.
# Site key must be exposed to the client; secret stays on server only.
NEXT_PUBLIC_TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# XP caps (tune to control daily awards)
# Total XP cap across all sources per day (0 = disable cap)
XP_DAILY_CAP_TOTAL=600
# Per-source caps per day (0 = disable source-specific cap)
XP_DAILY_CAP_TODO=200
XP_DAILY_CAP_LESSON=300

# Home map data version (bump to invalidate localStorage + CDN caches)
# Change this when the /api/universities payload shape changes or you need a hard refresh.
# Example: 2025-09-12 or any unique string/number.
NEXT_PUBLIC_UNIS_DATA_V=
